<UserControl x:Class="Angelina.Settings.View.ResourcesSettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:Angelina.Settings.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontSize="16px">
    <Grid>
        <StackPanel FlowDirection="LeftToRight">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <iconPacks:PackIconMaterial Kind="File" Margin="10px 10px 10px 10px" Foreground="White" Width="30px" Height="30px"/>
                <TextBox Controls:TextBoxHelper.ClearTextButton="True" Width="500px" Margin="0px 10px 0px 10px" />
                <Button Content="Added" Margin="10px 10px 10px 10px" />
            </StackPanel>
            <DataGrid HorizontalAlignment="Center" AutoGenerateColumns="True" Style="{StaticResource AzureDataGrid}"></DataGrid>
        </StackPanel>
    </Grid>
</UserControl>
